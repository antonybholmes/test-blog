---
layout: layouts/home.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
<h1>Posts</h1>
{% for post in posts %}
<article>
  <h2>
    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
  </h2>
  <time datetime="{{ post.date | dateIso }}">{{
    post.date | dateReadable
  }}</time>

  <p>{% excerpt post %}</p>

  <a href="{{ post.url | url }}" aria-label="Read more on {{ post.data.title }}"
    >Read more</a
  >
</article>
{% endfor %}
